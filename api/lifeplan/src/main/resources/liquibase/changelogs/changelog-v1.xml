    <changeSet id="LP-00004" author="viannagustavo71@gmail.com">
        <createTable tableName="currency_quotation">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="code" type="VARCHAR(10)"/>
            <column name="code_in" type="VARCHAR(10)"/>
            <column name="name" type="VARCHAR(255)"/>
            <column name="high" type="DECIMAL(10,4)"/>
            <column name="low" type="DECIMAL(10,4)"/>
            <column name="var_bid" type="DECIMAL(10,4)"/>
            <column name="pct_change" type="DECIMAL(5,2)"/>
            <column name="bid" type="DECIMAL(10,4)"/>
            <column name="ask" type="DECIMAL(10,4)"/>
            <column name="timestamp" type="BIGINT"/>
            <column name="create_date" type="TIMESTAMP"/>
            <column name="user_id" type="UUID"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="currency_quotation"
                                 baseColumnNames="user_id"
                                 constraintName="FK_USER_ID"
                                 referencedTableName="users"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"
                                 onUpdate="CASCADE"/>
    </changeSet>

